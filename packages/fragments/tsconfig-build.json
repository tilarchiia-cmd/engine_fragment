{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "noEmitOnError": false
  },
  "include": ["src"],
  "exclude": [
    "src/**/examples/**",
    "src/**/__tests__/**",
    "src/**/*.test.*",
    "src/**/test.*",
    "node_modules",
    "dist"
  ]
}
